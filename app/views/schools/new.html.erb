<div class="jumbotron text-center">
  <h2>Inscrire son école</h2>
  <div class="container col-6 mt-5 ">
    <div class="container bg-white col-8 rounded shadow p-3">

<%= form_with model: @school do |form| %>

		  <div class="form-group">
		    <%= form.label :nom %>:<br />
		    <%=form.text_field :name, class: 'form-control', placeholder: 'Nom d\'école' %>
		  </div>

		  <div class="form-group">
		    <%= form.label :website %>:<br />
		    <%=form.text_field :website, class: 'form-control', placeholder: 'www.mon_école.com'%>
		  </div>

		 <div class="form-group">
		    <%= form.label :creation_year %>:<br />
		    <%=form.text_field :creation_year, class: 'form-control', placeholder: 'Date de création de l\'école'%>
		  </div>


		 <div class="form-group">
		    <%= form.label :campus_nb %>:<br />
		    <%=form.text_field :campus_nb, class: 'form-control', placeholder: 'Nombre de campus'%>
		  </div>

		 <div class="form-group">
		    <%= form.label :siret %>:<br />
		    <%=form.text_field :siret, class: 'form-control', placeholder: 'N° siret de l\'école'%>
		  </div>

		    <hr>
		  <div class="actions">
		    <%= form.submit "Envoyer", class: 'btn btn-success' %>
		 </div>
	
	<% end %>
    
    </div>
  </div>
</div>
