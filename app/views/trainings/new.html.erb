<div class="jumbotron text-center">
  <h2>Publiez votre formation</h2>
  <div class="container col-6 mt-5 ">
    <div class="container bg-white col-8 rounded shadow p-3">
<%= form_with model: Training.new, url: "/schools/#{params[:school_id]}/trainings" do |form| %>

  <div class="form-group">
    <%= form.label :nom %>:<br />
    <%=form.text_field :name, class: 'form-control', placeholder: 'Nom de la formation'%>
  </div>
  <div class="form-group">
      <%= form.label 'Durée de la formation en semaine' %>:
      <%= select_tag(:duration ,options_for_select(['1', '2', '3', '4', '5', '6']), class: 'form-control') %>
  </div>

  <div class="form-group">
    <%= form.label :description %> :<br />
    <%=form.text_field :description, class: 'form-control', placeholder: 'Présentez votre formation...'%>
  </div>

  <div class="form-group">
    <%= form.label 'Nombre d\'heure minimump par jour' %>:
    <%= select_tag(:hours_per_day ,options_for_select(['2', '3', '4', '6', '8']), class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= form.label :url %>:<br />
    <%=form.text_field :url, class: 'form-control', placeholder: 'www.mon_école.com'%>
  </div>
  <div class="form-group">
      <%= form.label 'Mode d\'enseignement' %>:
      <%= select_tag(:mode ,options_for_select(['Présentiel', 'À distance', 'Présentiel ou à distance', 'Alternance', 'Autre']), class: 'form-control') %>
  </div>
  <fieldset class="form-group">
      <label>Aide à la recherche d'emploi :</label>

      <div class="form-check">
      <%= radio_button_tag(:help_for_a_job, true) %>
      <%= label_tag(:true, "Oui") %><br>
      <%= radio_button_tag(:help_for_a_job, false) %>
      <%= label_tag(:false, "Non") %>
  </fieldset>
    <hr>
  <div class="actions">
    <%= form.submit "Envoyer", class: 'btn btn-success' %>
  </div>
<% end %>
    </div>
  </div>
</div>
