<div class="training">
  <div class="jumbotron">
    <h1 class="display-5"><%= @training.name %></h1>
    <hr class="my-4">
    <h3 class="display-6"><%= @training.school.name %></h3>
  </div>



<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#home">Programme</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#profile">Sessions</a>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#school">L'école</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#more">En savoir plus</a>
  </li>
</ul>

  <div id="myTabContent" class="tab-content">
  <div class="tab-pane fade" id="home">
   <% @programs.each do |program| %>
        <p><%= program.description %></p>
    <% end %>

    <% @programs.each do |program| %>
        <p><%= program.language %></p>
    <% end %>
  </div>

  <div class="tab-pane fade" id="profile">
      <% if @sessions.count > 0 %>
      <% @sessions.each do |session| %>
      <% if session.start_date && session.end_date %>
        
      <div class="card border-secondary mb-3" style="max-width: 20rem;">
      <div class="card-header"> Session à venir </div>
      <div class="card-body">
      <h4 class="card-title">Secondary card title</h4>
    <p class="card-text"><p><%= "La session commmence le #{session.start_date.strftime('%d/%m/%y')}" %></p>
        <p><%= "La session finit le #{session.end_date.strftime('%d/%m/%y')}" %></p>
      <% end %>
      <p><%= "Lieu : #{session.location}" %></p>
      <p><%= "Prix : #{session.price} €" %></p></p>
      </div>
      <% end %>

      <% else %>
      <p>Pas de sessions de prévues...</p>
      <% end %>
    </div>
  </div>


  <div class="tab-pane fade" id="school">
  </div>

  <div class="tab-pane fade" id="more">
    <%= link_to "Aller sur le site de la formation", @training.url, class: "btn btn-info" %>

  </div>
</div>








 






  <div class="comments">
    <%= render 'comments' %>
    <%= render 'new_comment_form' %>
  </div>
</div>
